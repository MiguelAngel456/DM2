<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.borrrraaaaar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:background="#6C448A"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblmercado"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="mercado"
                android:text="Mercado"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblpuente"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="puente"
                android:text="Puente e iglesia de San AntÃ³n"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lbliglesia"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="iglesia"
                android:text="Iglesia"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_layout2"
            android:layout_width="fill_parent"
            android:layout_height="262dp"
            android:background="#6C448A"
            android:gravity="center|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblmarijaia"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="marijaia"
                android:text="Marijaia"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblrivera"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="rivera"
                android:text="Rivera"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblhucha"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="hucha"
                android:text="Hucha de Txikitero"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/yellowLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:tag="iglesia">

                <ImageView
                    android:id="@+id/Iglesia"
                    android:layout_width="137dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:tag="iglesia"
                    app:srcCompat="@drawable/iglesia" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:tag="puente">

                <ImageView
                    android:id="@+id/puente"
                    android:layout_width="137dp"
                    android:layout_height="112dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:tag="puente"
                    app:srcCompat="@drawable/puente" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LYmercado"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:tag="mercado">

                <ImageView
                    android:id="@+id/mercado"
                    android:layout_width="137dp"
                    android:layout_height="112dp"
                    android:tag="mercado"
                    app:srcCompat="@drawable/mercado" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/Lrivera"
                android:layout_width="122dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="rivera">

                <ImageView
                    android:id="@+id/rivera"
                    android:layout_width="137dp"
                    android:layout_height="112dp"
                    app:srcCompat="@drawable/rivera" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lmarijaia"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="marijaia">

                <ImageView
                    android:id="@+id/marijaia"
                    android:layout_width="137dp"
                    android:layout_height="112dp"
                    app:srcCompat="@drawable/marijaia" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lhucha"
                android:layout_width="124dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="hucha">

                <ImageView
                    android:id="@+id/hucha"
                    android:layout_width="137dp"
                    android:layout_height="118dp"
                    app:srcCompat="@drawable/hucha" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>