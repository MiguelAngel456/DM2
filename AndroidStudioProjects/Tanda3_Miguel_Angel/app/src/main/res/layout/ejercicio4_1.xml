<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A0F0F"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija el nombre del manga que cree que es(Puede ser mas de una):"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/chpregunta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dragon ball"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/chpregunta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naruto"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/chpregunta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One Piece"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        app:srcCompat="@drawable/db" />

    <Button
        android:id="@+id/btnVolver1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volver" />
</LinearLayout>