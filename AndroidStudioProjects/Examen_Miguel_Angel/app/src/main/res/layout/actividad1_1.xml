<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Verificacion De La Reserva Realizada"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtFechaVer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtNombreVer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Apellido: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtApellidosVer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Origen: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtOrigenVer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:text="Destino: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDestinoVer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hora de salida seleccionada: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtHoraVer"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center"
        android:text="Â¿Verificar los datos?"
        android:textColor="#08FF00"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2B40B1"
            android:onClick="no"
            android:text="No"
            android:textColor="#EC0000" />

        <Button
            android:id="@+id/btnSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#273CB5"
            android:onClick="si"
            android:text="Si"
            android:textColor="#05FF11" />

    </LinearLayout>
</LinearLayout>