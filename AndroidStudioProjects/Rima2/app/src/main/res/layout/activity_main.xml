<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGrupos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:text="Hacer Grupos" />

    <EditText
        android:id="@+id/txtRima"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/zona3_2_bordes_edittext"
        android:enabled="false"
        android:hint="@string/escribe_tu_rima"
        android:outlineSpotShadowColor="@color/black"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnComprobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Comprobar" />

    <RelativeLayout
        android:id="@+id/relativeDidon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/txtZona1_2_Dingdong"
            android:layout_width="361dp"
            android:layout_height="122dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/bocadillo_cuadrado"
            android:fontFamily="@font/nunitoregular"
            android:paddingHorizontal="30dp"
            android:paddingVertical="50dp"
            android:text="@string/que_rima_mas_original"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imgZona1_2_Dingdong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:src="@drawable/dindonfunko" />

    </RelativeLayout>


</LinearLayout>