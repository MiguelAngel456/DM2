<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".MainActivity">
    

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pestañas Ejemplo 1"
        android:layout_gravity="center_horizontal"
        android:onClick="ejemplo1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pestañas Ejemplo 2"
        android:layout_gravity="center_horizontal"
        android:onClick="ejemplo2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pestañas Ejemplo 3"
        android:layout_gravity="center_horizontal"
        android:onClick="ejemplo3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad ToolBar"
        android:layout_gravity="center_horizontal"
        android:onClick="toolBar"/>

</LinearLayout>