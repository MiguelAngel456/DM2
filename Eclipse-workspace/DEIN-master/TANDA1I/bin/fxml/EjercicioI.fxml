<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<GridPane prefHeight="576.0" prefWidth="666.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EjercicioIController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="311.0" minWidth="10.0" prefWidth="273.0" />
    <ColumnConstraints hgrow="ALWAYS" maxWidth="471.0" minWidth="335.0" prefWidth="373.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="121.0" minHeight="36.0" prefHeight="120.0" vgrow="NEVER" />
    <RowConstraints maxHeight="453.0" minHeight="398.0" prefHeight="399.0" vgrow="ALWAYS" />
    <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <Label alignment="CENTER_RIGHT" text="Filtrar por nombre:" GridPane.halignment="RIGHT" />
      <TableView fx:id="tablaPersona" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <columns>
          <TableColumn fx:id="colNombre1" maxWidth="1.7976931348623157E308" prefWidth="232.0" text="%Nombre" />
          <TableColumn fx:id="colApellido1" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="232.0" text="%Apellido" />
            <TableColumn fx:id="colEdad1" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="138.0" text="%Edad" />
        </columns>
         <contextMenu>
            <ContextMenu>
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#modificarPersona" text="Modificar" />
                <MenuItem mnemonicParsing="false" onAction="#eliminar" text="Eliminar" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
      <FlowPane alignment="CENTER" prefHeight="40.0" prefWidth="526.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
         <children>
            <Button fx:id="btnAnadir" mnemonicParsing="false" onAction="#anadirPersona" text="Añadir Persona">
               <FlowPane.margin>
                  <Insets right="20.0" />
               </FlowPane.margin>
               <graphic>
                  <FontIcon iconLiteral="fas-user-plus" iconSize="20" wrappingWidth="28.0" />
               </graphic>
               <tooltip>
                  <Tooltip text="Pulsa para añadir" />
               </tooltip>
            </Button>
            <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#modificarPersona" text="Modificar Persona">
               <FlowPane.margin>
                  <Insets left="20.0" right="20.0" />
               </FlowPane.margin>
               <graphic>
                  <FontIcon iconLiteral="fas-edit" iconSize="20" />
               </graphic>
            </Button>
            <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminar" text="Eliminar Persona">
               <FlowPane.margin>
                  <Insets left="20.0" />
               </FlowPane.margin>
               <graphic>
                  <FontIcon iconLiteral="fas-window-close" iconSize="20" />
               </graphic>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </FlowPane>
      <FlowPane alignment="CENTER_LEFT" prefHeight="75.0" prefWidth="479.0" GridPane.columnIndex="1" GridPane.halignment="CENTER">
         <children>
            <TextField fx:id="txtBuscar" onKeyTyped="#filtrar">
               <tooltip>
                  <Tooltip text="Filtra la tabla por el nombre" />
               </tooltip></TextField>
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" />
         </padding>
      </FlowPane>
      <ImageView fitHeight="114.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/mens.jpg" />
         </image>
      </ImageView>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</GridPane>
